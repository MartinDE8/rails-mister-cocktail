<h1> <%= @cocktail.name %></h1>

<h2>Doses:</h2>

<% @cocktail.doses.each do |dose| %>
   <ul>
     <li><%= dose.ingredient.name %> | <%= dose.description %><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i><% end %></li>
   </ul>
<% end %>

<%= link_to"Add a dose to this cocktail", new_cocktail_dose_path(@cocktail) %>
<%= link_to"Go back to index", cocktails_path %>
